@model IEnumerable<App.Models.Blog.Category>

@{
    ViewData["Title"] = "Danh sách các chuyên mục Blog";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Tạo chuyên mục mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach(var item in Model)
        {
            await RenderCategory(item,0);
        }
    </tbody>
</table>

@{
    async Task RenderCategory(Category item, int level)
    {
        string prefix = string.Concat(Enumerable.Repeat("&nbsp;&nbsp;&nbsp;", level));
        <tr>
            <td>
                @Html.Raw(prefix)
                <a asp-action="Edit" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Xem chi tiet</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Xoa</a>
            </td>
        </tr>
        @if(item.CategoryChildren?.Count > 0)
        {
			foreach (var cCategory in item.CategoryChildren)
			{
				await RenderCategory(cCategory, level + 1);
			}
        }
    }
}


